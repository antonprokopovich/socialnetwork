{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>Latest Registered Users</h2>
    {{if .Users}}
        <table>
            <tr>
                <th>FirstName</th>
                <th>CreatedAt</th>
                <th>ID</th>
            </tr>
            {{range .Users}}
                <tr>
                    <td><a href="/user/{{.ID}}">{{.FirstName}}</a></td>
                    <td>{{humanDate .CreatedAt}}</td>
                    <td>#{{.ID}}</td>
                </tr>
            {{end}}
        </table>
    {{else}}
        <p>There's nothing to see here yet!</p>
    {{end}}
{{end}}